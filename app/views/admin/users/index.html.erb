<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>UserName</th>
      <th>Follow</th>
      <th>Follower</th>
      <th>Status</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.get_profile_image(50,50) %>
      </td>
      <td>
        <%= link_to user_path(user.id) do %>
        <%= user.user_name %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
