<div class="container mt-sm-5 mb-sm-5 px-sm-0">
  <h1>グループ一覧</h1>

    <div class="text-right mt-4 mb-3">
      <%= search_form_for @q, url: search_admin_groups_path do |f| %>
        <%= f.search_field :name_cont %>
        <%= f.submit "検索" %>
      <% end %>
    </div>

    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th></th>
          <th>Group</th>
          <th>Introduction</th>
          <th>Members</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td>
              <%= image_tag group.get_group_image(60,60) %>
            </td>
            <td>
              <%= link_to admin_group_path(group.id) do %>
                <%= group.name %>
              <% end %>
            </td>
            <td>
              <%= group.introduction.truncate(25) %>
            </td>
            <td>
              <i class="fas fa-users"></i>
              <%= group.users.count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @groups %>

</div>