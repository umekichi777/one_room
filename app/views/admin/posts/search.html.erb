<div>
  <div>
    <div>
      <h1>投稿検索結果</h1>

      <table class="table">
        <thead>
          <tr>
            <th>UserName</th>
            <th>Title</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @results.each do |post| %>
            <tr>
              <td>
                <%= link_to user_path(post.user.id) do %>
                  <%= post.user.user_name %>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td>
                <%= post.favorites.count %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>