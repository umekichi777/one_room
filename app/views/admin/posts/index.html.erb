<div class="container px-sm-0">
  <div class="row">
    <div class="col-md-11 mx-auto">
      <h1>投稿一覧</h1>

      <!--<div>-->
        <%#= search_form_for @q, url: search_admin_posts_path do |f| %>
          <%#= f.search_field :title_cont %>
          <%#= f.submit "検索" %>
        <%# end %>
      <!--</div>-->

      <div>
        <table>
          <tbody>
          <%# @tag_list.each do |list| %>
            <tr>
              <td>
                <%#= link_to admin_tag_search_tag_path(tag_id: list.id) do %>
                  <%#= list.name %>
                <%# end %>
                <%#="(#{list.posts.count})" %>
              </td>
            </tr>
          <%# end %>
          </tbody>
        </table>
      </div>

      <table class="table table-hover text-center">
        <thead>
          <tr>
            <th>UserName</th>
            <th>Title</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr id="post_<%= post.id %>">
              <td>
                <%= link_to user_path(post.user.id) do %>
                  <%= post.user.user_name %>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <!--<td class="favorite-btn">-->
                <%#= render "public/favorites/favorite-btn", post: post %>
              <!--</td>-->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>