<div>
  <div>
    <div>
      <h1>グループ編集</h1>

      <%= form_with model: @group, url: group_path(@group), method: :patch, local: true do |f| %>
        <%= f.label :name, "グループ名" %>
        <%= f.text_field :name, autofocus: true %>

        <%= f.label :introduction, "グループ紹介" %>
        <%= f.text_area :introduction, autofocus: true %>

        <%= f.label :group_image, "グループ画像" %>
        <%= f.file_field :group_image, accept: "image*/" %>

        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>
