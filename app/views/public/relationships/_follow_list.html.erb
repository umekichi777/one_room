<% if users.exists? %>
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th></th>
          <th>UserName</th>
          <th></th>
          <th></th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= user.user_name %></td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <div class="text-center">
    <p>No users</p>
  </div>
<% end %>