<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2 class="log-t">Log in</h2>
      <%= render "public/shared/error_messages", resource: resource %>

      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="field form-item">
          <%= f.label :user_name, "ユーザー名" %><br />
          <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
        </div>

        <div class="field form-item">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field form-item">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <%# if devise_mapping.rememberable? %>
          <!--<div class="field form-item">-->
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          <!--</div>-->
        <%# end %>

        <div class="actions button-panel">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>



<style>
.log-t {
  text-align: center;
  padding: 1em 0;
  color: #5e5e5e;
  font-family: "Lucida Console", Courier, monospace;
}

p {
  color: #5e5e5e;
}

.title_border {
  border-bottom: solid 3px #d6e9ca;
  position: relative;
}

.title_border:after {
  position: absolute;
  content: " ";
  display: block;
  border-bottom: solid 3px  #336666;
  bottom: -3px;
  width: 20%;
}

  .form-item {
  margin-bottom: 0.75em;
  width: 100%;
  color: #5e5e5e;
}

.form-item input {
  background: #fafafa;
  border: none;
  border-bottom: 2px solid #e9e9e9;
  color: #666;
  font-family: 'Open Sans', sans-serif;
  font-size: 1em;
  height: 50px;
  transition: border-color 0.3s;
  width: 100%;
}

.form-item input:focus {
  border-bottom: 2px solid #c0c0c0;
  outline: none;
}

.button-panel {
  margin: 2em 0 0;
  width: 100%;
  color: #5e5e5e;
}


.button-panel .button {
  background:  #336666;
  border: none;
  color: #fff;
  cursor: pointer;
  height: 50px;
  font-family: 'Open Sans', sans-serif;
  font-size: 1.2em;
  letter-spacing: 0.05em;
  text-align: center;
  text-transform: uppercase;
  transition: background 0.3s ease-in-out;
  width: 100%;
}
</style>
